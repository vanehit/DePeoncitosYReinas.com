<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DePeoncitosYReinas.com - Publicaciones</title>
  <link rel="icon" href="/images/reina.ico" type="image/x-icon" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/styles.css">  
</head>
<body>

  <!-- Encabezado -->
  <header class="bg-light text-primary text-center py-3">
    <%- include('../partials/header.ejs') %>
  </header>

  <!-- Contenido de la p치gina de publicaciones -->
  <section class="container mt-5">
    <h1 class="text-center">Publicaciones</h1>

    <% if (posts && posts.length > 0) { %>
      <!-- Itera sobre las publicaciones y muestra cada una -->
      <div class="row">
        <% posts.forEach((post) => { %>
          <div class="col-md-6">
            <div class="card mb-4">
              <div class="card-body">
                <h2 class="card-title"><%= post.title %></h2>
                <p class="card-text"><%= post.content %></p>
                <!-- Agrega m치s detalles de la publicaci칩n si es necesario -->
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p class="text-center">No hay publicaciones disponibles.</p>
    <% } %>
  </section>

  <!-- Pie de p치gina -->
  <%- include('../partials/footer.ejs') %>

  <!-- Scripts JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="/public/js/script.js"></script>

</body>
</html>
